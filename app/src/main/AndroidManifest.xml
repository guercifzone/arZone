<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.guercif.arzone">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ca22lp01"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ca22lp01"
            android:supportsRtl="true"
            android:theme="@style/Theme.ArZone">
        <activity
                android:name=".Rss.RssFeedActivity"
                android:exported="false"/>
        <activity
                android:name=".Rss.Manager_Rss_Activity"
                android:exported="false"/>
        <activity
                android:name=".Web.WebActivity"
                android:exported="false"/>
        <activity
                android:name=".Web.ManFeed.RssFeedActivity"
                android:exported="false"/>
        <activity
                android:name=".Splash_Screen"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.ArZone.NoActionBar">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>